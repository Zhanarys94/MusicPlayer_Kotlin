<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/list_item_background">

    <CheckBox
        android:id="@+id/songSelectorItemCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="false" />

    <TextView
        android:id="@+id/songSelectorItemTvArtist"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/songSelectorItemCheckBox"/>

    <TextView
        android:id="@+id/songSelectorItemTvTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/songSelectorItemTvArtist"
        android:layout_toEndOf="@id/songSelectorItemCheckBox"/>

    <TextView
        android:id="@+id/songSelectorItemTvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songSelectorItemTvArtist"
        android:layout_toEndOf="@id/songSelectorItemTvTitle"/>

</RelativeLayout>