<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/songSelectorItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false" />

    <TextView
        android:id="@+id/songSelectorItemTvArtist"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/songSelectorItemCheckBox" />

    <TextView
        android:id="@+id/songSelectorItemTvTitle"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/songSelectorItemTvArtist"
        android:layout_toEndOf="@id/songSelectorItemCheckBox" />

    <TextView
        android:id="@+id/songSelectorItemTvDuration"
        android:layout_width="40dp"
        android:layout_height="17dp"
        android:layout_below="@id/songSelectorItemTvArtist"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/songSelectorItemTvTitle"
        android:text="00:00" />

</RelativeLayout>